<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReportActivity"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/img_camera" />

    <EditText
        android:id="@+id/etInfo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/image"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_back_white"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Information Related to accident"
        android:inputType="textMultiLine"
        android:paddingStart="18dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:gravity="start"
        android:paddingTop="15dp"

        android:textSize="15sp" />

    <Button
        android:id="@+id/btSent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/etInfo"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/edit_back_colored"
        android:fontFamily="@font/poppins_bold"
        android:text="Sent"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>